  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "tsc-compiled",
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020"
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ],
  "include": [
    "src"
  ]
}
